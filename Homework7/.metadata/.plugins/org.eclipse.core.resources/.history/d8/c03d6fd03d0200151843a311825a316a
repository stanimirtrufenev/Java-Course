import java.util.Scanner;

public class Zadachka8 {

	public static void main(String[] args) {
		Scanner input = new Scanner(System.in, "UTF-8");

		System.out.println("Please enter number for end: ");
        int n = input.nextInt();
        
        input.close();
        
        int[] a = new int[n];

        for (int i = 1; i <= n; i++){
           a[i-1] = i;
        System.out.print(a[i-1] + " ");
        }

        for (int i = 0; i < n; i++) {
           for(int r = n-1; r >= 0; r--)   {
           int swap = a[r];
           a[r] = a[i];
           a[i] = swap;
        }
           System.out.print(a[i] + " ");
      }

        for (int i = 0; i < n; i++)
        System.out.print(a[i] + " ");
     System.out.println("");


     for (int i = 0; i < n; i++) {
        for (int j = 0; j < n; j++) {
           if (a[j] == i){
        	   System.out.print("* ");
           }
           else{
        	   System.out.print(". ");
           }
        }
        System.out.println("");
     }
  }
}
