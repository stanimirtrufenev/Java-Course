
public class Desserts extends Stock {
	public String name;
	public int sugar;
	
	public Desserts(){
		super();
		this.name = "";
		this.sugar = 0;
	}
	
	public Desserts(int price, boolean available, String name, int sugar){
		super(price, available);
		
		setName(name);
		setSugar(sugar);
	}

	public String getName() {
		return name;
	}

	public void setName(String name) {
		this.name = name;
	}
	
	public int getSugar() {
		return sugar;
	}

	public void setSugar(int sugar) {
		this.sugar = sugar;
	}
	
	public void saySeason(){
		System.out.println("The name of the dessert is " + this.name);
		System.out.println("The dessert has " + this.sugar + " grams of sugar");
	}

}
